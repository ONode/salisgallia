{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "emailVerificationRequired": false,
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "generated": true,
      "required": false
    },
    "phone": {
      "type": "string",
      "required": false
    },
    "mac": {
      "type": "string",
      "required": false,
      "description": "mac address"
    },
    "bitcoin": {
      "type": "string",
      "required": false,
      "description": "coin address"
    },
    "ltecoin": {
      "type": "string",
      "required": false,
      "description": "coin address"
    },
    "rose": {
      "type": "string",
      "required": false,
      "description": "rose amount"
    },
    "coin": {
      "type": "string",
      "required": false,
      "description": "local internal coin counts"
    },
    "publications": {
      "type": [
        {
          "title": {
            "type": "string",
            "required": true
          },
          "date": {
            "type": "string",
            "required": true
          }
        }
      ],
      "description": "the name and the series of publications",
      "required": false
    },
    "bio": {
      "type": "string",
      "required": false,
      "description": "local internal coin counts"
    },
    "name": {
      "type": "string",
      "required": false,
      "description": "name of the artist or seller"
    },
    "age": {
      "type": "number",
      "required": false,
      "description": "the age of the user"
    },
    "photo": {
      "type": "object",
      "required": false,
      "description": "the path or url to display the head photo"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "requestCode"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "loginWithCode"
    }
  ],

  "relations": {
    "basemaps": {
      "type": "hasMany",
      "model": "Basemap",
      "foreignKey": "publisherId"
    }
  },


  "methods": {
    "requestCode": {
      "isStatic": false,
      "description": "Remote method is allowing people to use it.",
      "accepts": [
        {
          "arg": "credentials",
          "type": "object",
          "required": true,
          "description": "credential object json"
        }
      ],
      "returns": {
        "arg": "person",
        "type": "object",
        "root": true,
        "description": "The updated person object."
      },
      "http": {
        "path": "/requestCode",
        "verb": "post"
      }
    },
    "loginWithCode": {
      "isStatic": false,
      "description": "Allow login the account with login code",
      "accepts": [
        {
          "arg": "credential",
          "type": "number",
          "required": true,
          "http": {
            "source": "text"
          },
          "description": "PersistedModel id"
        }
      ],
      "returns": {
        "arg": "person",
        "type": "object",
        "root": true,
        "description": "The updated person object."
      },
      "http": {
        "path": "/loginWithCode",
        "verb": "post"
      }
    }
  }
}
